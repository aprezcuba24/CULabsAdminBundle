
    /**
     * Displays a form to edit an existing {{ entity }} entity.
     *
{% if 'annotation' == format %}
     * @Route("/{id}/edit", name="{{ route_name_prefix }}_edit")
     * @Secure(roles="ROLE_{{ entity|upper }}_EDIT")
     * @Template()
{% endif %}
     */
    public function editAction($id, Request $request)
    {
{% if 'annotation' != format %}
        if (!$this->isGranted('ROLE_{{ entity|upper }}_EDIT')) {
            throw new AccessDeniedException();
        }
{% endif %}
        $entity = $this->findOr404($this->getModel(), $id);
        $form = $this->createForm('{{ entity|lower }}_form', $entity, [
            'action' => $this->generateUrl('{{ route_name_prefix }}_edit'),
        ]);
        $form->handleRequest($request);
        if ($form->isValid()) {
            $this->update($entity);
            $this->addFlash('notice', 'The entity is saved.');

            return $this->redirectToRoute('{{ route_name_prefix }}_show', [
                'id' => $entity->getId(),
            ]);
        }

{% if 'annotation' == format %}
        return [
            'entity' => $entity,
            'form'   => $form->createView(),
        ];
{% else %}
        return $this->render('{{ bundle }}:{{ entity|replace({'\\': '/'}) }}CRUD:edit.html.twig', [
            'entity' => $entity,
            'form'   => $form->createView(),
        ]);
{% endif %}
    }
