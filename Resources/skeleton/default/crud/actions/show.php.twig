
    /**
     * Finds and displays a {{ entity }} entity.
     *
{% if 'annotation' == format %}
     * @Route("/{id}/show", name="{{ route_name_prefix }}_show")
     * @Security("has_role('ROLE_{{ entity|upper }}_SHOW')")
     * @Template()
{% endif %}
     */
    public function showAction($id)
    {
{% if 'annotation' != format %}
        if (!$this->isGranted('ROLE_{{ entity|upper }}_SHOW')) {
            throw new AccessDeniedException();
        }
{% endif %}
{% if 'annotation' == format %}
        return [
            'entity' => $this->findOr404($this->getModel(), $id),
        ];
{% else %}
        return $this->render('{{ bundle }}:{{ entity|replace({'\\': '/'}) }}CRUD:show.html.twig', [
            'entity' => $this->findOr404($this->getModel(), $id),
        ]);
{% endif %}
    }
