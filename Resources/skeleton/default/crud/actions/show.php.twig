{% endif %}
     *
     * @param {{ entity_class }} $entity
     * @return \Symfony\Component\HttpFoundation\Response
     */
    public function showAction({{ entity_class }} $entity)
    {
{% if 'annotation' != format %}
        if (!$this->isGranted('ROLE_{{ entity|upper|replace({'\\': '_'}) }}_SHOW')) {
