
    /**
     * Displays a form to create a new {{ entity }} entity.
     *
{% if 'annotation' == format %}
     * @Route("/new", name="{{ route_name_prefix }}_new")
     * @Secure(roles="ROLE_{{ entity|upper }}_NEW")
     * @Template()
{% endif %}
     */
    public function newAction(Request $request)
    {
{% if 'annotation' != format %}
        if (!$this->isGranted('ROLE_{{ entity|upper }}_NEW')) {
            throw new AccessDeniedException();
        }
{% endif %}
        $entity = $this->getModel()->createEntity();
        $form   = $this->createForm('{{ entity|lower }}_form', $entity);
        $form->handleRequest($request);
        if ($form->isValid()) {
            $this->create($entity);
            $this->addFlash('notice', 'The entity is saved.');

            return $this->redirectToRoute('{{ route_name_prefix }}_show', array(
                'id' => $entity->getId(),
            ));
        }

{% if 'annotation' == format %}
        return array(
            'entity' => $entity,
            'form'   => $form->createView()
        );
{% else %}
        return $this->render('{{ bundle }}:{{ entity|replace({'\\': '/'}) }}CRUD:new.html.twig', array(
            'entity' => $entity,
            'form'   => $form->createView()
        ));
{% endif %}
    }
