{{ '{% extends \'CULabsAdminBundle:Crud:index.html.twig\' %}' }}

{{ '{% block title_session %}' }}{{ '{{ \'%entity_name% list\'|trans}}'|replace({'%entity_name%':entity}) }}{{ '{% endblock %}' }}

{{ '{% block list_id %}' }}{{ entity }}_list{{ '{% endblock %}' }}

{{ '{% block filter_form %}' }}
<form action="{{ "{{ path('"~ route_name_prefix ~"_filter') }}" }}" method="post">
    <div class="form">
        <div>
            {{ '{% form_theme filter \'CULabsAdminBundle:Form:fields.html.twig\' %}' }}
            {{ '{{  form_rest(filter) }}' }}
            <div class="clear"></div>
        </div>
        <input class="btn primary" type="submit" name="action_filter" value="{{ '{{ \'Filter\'|trans }}' }}"/>
        <input class="btn" type="submit" name="action_reset" value="{{ '{{ \'Reset\'|trans }}' }}" />
    </div>
</form>
{{ '{% endblock %}' }}

{{ '{% block actions %}' }}
    {{ '{% if is_granted(\'ROLE_%entity_name%_NEW\') %}'|replace({'%entity_name%':entity|upper}) }}
    <a href="{{ "{{ path('"~ route_name_prefix ~"_new') }}" }}" class="btn info">{{ '{{ \'New\'|trans }}' }}</a>
    {{ '{% endif %}' }}
{{ '{% endblock %}' }}

{{ '{% block list %}' }}
<div id="ajax_{{ entity }}">
    {{ '{% include \'%bundle_name%:%entity_name%:list.html.twig\' with { 
        \'pager\': pager,
        \'sort\' : sort,
    } %}'|replace({'%entity_name%':entity, '%bundle_name%':bundle }) }}
</div>
{{ '{% endblock %}' }}
