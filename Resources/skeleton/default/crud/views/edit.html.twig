{{ '{% extends \'CULabsAdminBundle:Crud:view.html.twig\' %}' }}

{{ '{% block title_session %}' }}{{ '{{ \'Edit %entity_name%\'|trans }}'|replace({'%entity_name%':entity}) }}{{ '{% endblock %}' }}

{{ '{% block actions %}' }}
    <a href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}" class="btn info">{{ '{{ \'List\'|trans }}' }}</a>
    {{ '{% if is_granted(\'ROLE_%entity_name%_NEW\') %}'|replace({'%entity_name%':entity|upper}) }}
    <a href="{{ "{{ path('"~ route_name_prefix ~"_new') }}" }}" class="btn info">{{ '{{ \'New\'|trans }}' }}</a>
    {{ '{% endif %}' }}
    {{ '{% if is_granted(\'ROLE_%entity_name%_SHOW\') %}'|replace({'%entity_name%':entity|upper}) }}
    <a href="{{ "{{ path('"~ route_name_prefix ~"_show', { 'id': entity.id }) }}" }}" class="btn info">{{ '{{ \'Show\'|trans }}' }}</a>
    {{ '{% endif %}' }}
    {{ '{% if is_granted(\'ROLE_%entity_name%_DELETE\') %}'|replace({'%entity_name%':entity|upper}) }}
    <a href="#" onclick="confirmarUrl('{{ '{{ \'Realmente desea borrar\'|trans }}' }}', '{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': entity.id }) }}" }}')" class="btn danger">{{ '{{ \'Delete\'|trans }}' }}</a>
    {{ '{% endif %}' }}
{{ '{% endblock %}' }}
    
{{ '{% block view_body %}' }}
    {{ '{% include \'%bundle_name%:%entity_name%:form.html.twig\' with { 
        \'form\': form,
    } %}'|replace({'%entity_name%':entity, '%bundle_name%':bundle }) }}
{{ '{% endblock %}' }}