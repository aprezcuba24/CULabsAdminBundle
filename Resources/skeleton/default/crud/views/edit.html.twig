{{ '{% extends \'CULabsAdminBundle:Crud:view.html.twig\' %}' }}

{{ '{% block title_page %}' }}{{ '{{ \'Edit %entity_name%\'|trans }}'|replace({'%entity_name%':entity}) }}{{ '{% endblock %}' }}

{{ '{% block actions %}' }}
    <ul class="actions">
        <li>
            <a href="{{ "{{ path('"~ route_name_prefix ~"') }}" }}" class="btn btn-icon btn-info">
                <i class="icon-list icon-white"></i>{{ '{{ \'List\'|trans }}' }}
            </a>
        </li>
        {{ '{% if is_granted(\'ROLE_%entity_name%_NEW\') %}'|replace({'%entity_name%':entity|upper}) }}
        <li>
            <a href="{{ "{{ path('"~ route_name_prefix ~"_new') }}" }}" class="btn btn-icon btn-primary">
                <i class="icon-plus-sign icon-white"></i>{{ '{{ \'New\'|trans }}' }}
            </a>
        </li>
        {{ '{% endif %}' }}
        {{ '{% if is_granted(\'ROLE_%entity_name%_SHOW\') %}'|replace({'%entity_name%':entity|upper}) }}
        <li>
            <a href="{{ "{{ path('"~ route_name_prefix ~"_show', { 'id': entity.id }) }}" }}" class="btn btn-icon btn-info">
                <i class="icon-eye-open icon-white"></i>{{ '{{ \'Show\'|trans }}' }}
            </a>
        </li>
        {{ '{% endif %}' }}
        {{ '{% if is_granted(\'ROLE_%entity_name%_DELETE\') %}'|replace({'%entity_name%':entity|upper}) }}
        <li>
            <a href="#" onclick="confirmarUrl('{{ '{{ \'Realmente desea borrar\'|trans }}' }}', '{{ "{{ path('"~ route_name_prefix ~"_delete', { 'id': entity.id }) }}" }}', '{{ '{{ \'Comfirmar\'|trans }}' }}')" class="btn btn-icon btn-danger">
                <i class="icon-remove icon-white"></i>{{ '{{ \'Delete\'|trans }}' }}
            </a>
        </li>
        {{ '{% endif %}' }}
    </ul>
{{ '{% endblock %}' }}

{{ '{% block view_body %}' }}
    {{ '{% include \'%bundle_name%:%entity_name%CRUD:form.html.twig\' with {
        \'form\': form,
    } %}'|replace({'%entity_name%':entity, '%bundle_name%':bundle }) }}
{{ '{% endblock %}' }}
